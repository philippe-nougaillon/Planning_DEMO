<div class="d-flex flex-column justify-content-center align-items-center mb-5">
  <% unless request.variant.include?(:phone) %>
    <%= image_tag "logo@2000.png", style: "width: 100%; max-width: 500px;" %>
  <% end %>
  <div class="border border-dark rounded shadow w-100 p-5" style="max-width: 500px">
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <h1 class="text-center border-bottom mb-3 pb-3">
    <%= t('.change_your_password') %>
  </h1>
  <%
=begin%>
 <%= render "devise/shared/error_messages", resource: resource %> 
<%
=end%>
  
  <div class="form-group">
    <div class="row">
      <div class="col">
        <%= f.hidden_field :reset_password_token %>
        <%= f.password_field :password, autocomplete: "off" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <div class="actions">
          <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
