<div class="page-header">
  <h1>
  	Taux d'occupation salles
    du <%= l(@start_date.to_date) %> au <%= l(@end_date.to_date) %>
  </h1>
  soit <%= @nbr_jours %> jours 
</div>

<table class="table table-striped table-hover">
  <thead>
    <th>Salle</th>
    <th>Nbr heures de cours</th>
    <th>Nbr heures dispo par salle</th>
    <th>%</th>
  </thead>
  <tfoot>
    <th /><th /><th /><th />
  </tfoot>
  <tbody>
    <% @results.sort.each do |r| %>
      <tr>
        <td><b><%= r.first %></b></td>
        <td><%= r.last %></td>
        <td><%= @nbr_heures_dispo_salle %></td>
        <td><%= ((r.last * 100) / @nbr_heures_dispo_salle).to_i %> %</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

